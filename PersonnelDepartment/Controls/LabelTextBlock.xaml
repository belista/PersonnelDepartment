<UserControl x:Class="PersonnelDepartment.Controls.LabelTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonnelDepartment.Controls"
             mc:Ignorable="d"
             x:Name="RootElement">
    <Grid Width="410"
          HorizontalAlignment="Left"
          Margin="20 0 20 0">
        <Label Content="{Binding ElementName=RootElement, Path=Key}"
               Height="28"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontSize="14" />
        <TextBlock Height="24"
                 Margin="5 30 0 10"
                 Width="400"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 FontSize="12"
                 Text="{Binding ElementName=RootElement, Path=Value}" />
        <Border x:Name="Border"
                BorderThickness="0 0 0 1"
                BorderBrush="Gray"
                Visibility="{Binding ElementName=RootElement, Path=VisibilityBorder}">
        </Border>
    </Grid>
</UserControl>
