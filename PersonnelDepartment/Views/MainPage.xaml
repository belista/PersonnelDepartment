<Page x:Class="PersonnelDepartment.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:models="clr-namespace:PersonnelDepartment.Models"
      ShowsNavigationUI="False"
      x:Name="View">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        Background="Gray">
                <Button Content="Добавить"
                        Height="20"
                        Margin="5"
                        Command="{Binding AddCommand}" />

                <Button Content="Удалить"
                        Height="20"
                        Margin="5"
                        Command="{Binding RemoveCommand}" />
            </StackPanel>
            <TextBox Width="250"
                     HorizontalAlignment="Center"
                     Height="20"
                     Grid.Row="1"
                     Text="{Binding QueryString, UpdateSourceTrigger=PropertyChanged}" />

            <ListView ItemsSource="{Binding Employees}"
                      x:Name="EmployeeList"
                      SelectedItem="{Binding SelectedEmployee}"
                      Grid.Row="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" 
                                    Grid.Row="1">
                            <TextBlock Text="{Binding FullName}"
                                       Margin="2" /> 
                            <TextBlock Text="{Binding RegistrationNumber}"
                                       Margin="2" />
                            <Button Content="Delete"
                                    Command="{Binding ElementName=View, Path=DataContext.RemoveCommand}" 
                                    CommandParameter="{Binding}" /> 
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ContentPresenter x:Name="ContentPresenter"
                          Content="{Binding ElementName=EmployeeList, Path=SelectedItem}"
                          Visibility="Collapsed"
                          Grid.Column="1">
            <ContentPresenter.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer>
                        <StackPanel d:DataContext="{d:DesignInstance Type=models:Employee}">

                            <TextBox Text="{Binding FirstSurname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding SecondSurname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding ThirdSurname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding Patronymic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <DatePicker SelectedDate="{Binding DateOfBirth, Mode=TwoWay}" />
                            <TextBox Text="{Binding PassportInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding Registration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding RegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding FirstPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding SecondPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Text="{Binding ThirdPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <DatePicker SelectedDate="{Binding EmploymentDate, Mode=TwoWay}" />
                            <TextBox Text="{Binding FirstOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox IsChecked="{Binding Dismissed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <DatePicker SelectedDate="{Binding DateOfDismissal, Mode=TwoWay}" />
                            <TextBox Text="{Binding SecondOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="{Binding WorkDays}" Margin="8" />
                            <TextBox Text="{Binding Additionally, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>

                                <Button Content="Сохранить"
                                        Command="{Binding ElementName=View, Path=DataContext.SaveCommand}"
                                        CommandParameter="{Binding}"
                                        Grid.Column="1" />

                                <Button Content="Отмена"
                                        Grid.Column="3" />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </ContentPresenter.ContentTemplate>
        </ContentPresenter>
        <Grid x:Name="PreloaderHost"
              Grid.Column="1">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Viewbox Width="200"
                         Height="200">
                    <Image Source="pack://application:,,,/Assets/smile.png" />
                </Viewbox>
                <TextBlock Text="Ни одна запись не выбрана :("
                           TextAlignment="Center"
                           FontSize="32"
                           Margin="0, 24, 0, 0" />
            </StackPanel>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ContentStates">
                <VisualState x:Name="Preloader" />
                <VisualState x:Name="Content">
                    <VisualState.Storyboard>
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PreloaderHost"
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState.Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
